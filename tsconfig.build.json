{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "./types/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "stories",
    "tests",
    "src/testSetup.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "examples"
  ]
}